<div class="container">

<div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path('2147698936-freepik_mlznyv')%>')">
  Watch Lists
</div>

<h1>My Lists</h1>

<ul>
  <% @lists.each do |list| %>
    <%= link_to list.name, list_path(list) %>
    <br>
    <% if list.photo.attached? %>
      <%= cl_image_tag list.photo.key, width: 200, height: 150, crop: :fill %>
    <% end %>
    <%= link_to "Delete",
      list_path(list),
      data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
    %>
  <% end %>
</ul>

<%= link_to "Add a new list", new_list_path %>

</div>
